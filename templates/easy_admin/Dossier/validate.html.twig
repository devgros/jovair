{% extends '@EasyAdmin/default/edit.html.twig' %}

{% block content_title %}
{% spaceless %}Génération de l'APRS du dossier {{ entity.numBl }}{% endspaceless %}
{% endblock %}

{% block main %}
	{% block entity_form %}
	{{ form_start(form) }}
	<div class="row">
		<div class="col-xs-12 col-sm-12">
			<div class="box box-danger">
				<div class="box-header with-border">
					<h3 class="box-title">Informations CRS/APRS :</h3>
					<div class="box-tools pull-right">
						<button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
					</div>
				</div>
				<div class="box-body">
					<div class="row">
						<div class="col-xs-12 col-sm-6">
							<div class="form-group  field-entity">
								{{ form_label(form.horametreAprs) }}
								{{ form_widget(form.horametreAprs) }}
							</div>
						</div>
						<div class="col-xs-12 col-sm-6">
							<div class="form-group  field-entity">
								{{ form_label(form.remarqueAprs) }}
								{{ form_widget(form.remarqueAprs) }}
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-12 col-sm-6"></div>
						<div class="col-xs-12 col-sm-6">
							{{ form_widget(form.isValidCtrlOk) }}
						</div>
					</div>
				</div>
			</div>
			<div class="box box-warning">
				<div class="box-header with-border">
					<h3 class="box-title">Contrôle final :</h3>
					<div class="box-tools pull-right">
						<button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
					</div>
				</div>
				<div class="box-body">
					<div class="row">
						<div class="col-xs-12 col-sm-6">
							<div class="form-group  field-entity">
								{{ form_label(form.dateCf) }}
								{{ form_widget(form.dateCf) }}
							</div>
						</div>
						<div class="col-xs-12 col-sm-6">
							<div class="form-group  field-entity">
								{{ form_label(form.timeCf) }}
								{{ form_widget(form.timeCf) }}
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-12 col-sm-6">
							<div class="form-group  field-entity">
								{{ form_label(form.lieuCf) }}
								{{ form_widget(form.lieuCf) }}
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-12 col-sm-6">
							<div class="form-group  field-entity">
								{{ form_label(form.mecanicien) }}
								{{ form_widget(form.mecanicien) }}
							</div>
						</div>
						<div class="col-xs-12 col-sm-6">
							<div class="form-group  field-entity">
								{{ form_label(form.carteTravailFile) }}
								{{ form_widget(form.carteTravailFile) }}
								{{ form_errors(form.carteTravailFile) }}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
        <div class="col-xs-12 form-actions">
			<div class="form-group">
		        <div class="form-actions-row">
		            {{ form_widget(form.save) }}
		            <a href="{{ path('easyadmin', { action: 'show', entity: 'Dossier', primary_key_name: 'id', id: entity.id }) }}" class="btn btn-secondary">Retour au dossier</a>
		            {{ form_widget(form) }}
		        </div>
		    </div>
		</div>
	</div>
	{{ form_end(form) }}
	{% endblock entity_form %}
	{% block delete_form %}{% endblock delete_form %}
{% endblock %}