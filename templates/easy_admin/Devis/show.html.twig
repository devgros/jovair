{% extends 'easy_admin/show.html.twig' %}

{% block content %}
    {% block flash_messages %}
        {{ include(_entity_config is defined ? _entity_config.templates.flash_messages : '@EasyAdmin/default/flash_messages.html.twig') }}
    {% endblock flash_messages %}

    <section class="content-header">
    {% block content_header %}

        <h1 class="title">{% block content_title %}Pro format NÂ°: {{ entity.numDevis }} <span class="right label {% if entity.statut == 1 %}label-success{% else %}label-warning{% endif %}">{{ statut_devis[entity.statut] }}</span>{% endblock %}
        </h1>

    {% endblock content_header %}
    {% block content_help %}
        {% if _entity_config is defined and _entity_config[app.request.query.get('action')]['help']|default(false) %}
            <div class="box box-widget help-entity">
                <div class="box-body">
                    {{ _entity_config[app.request.query.get('action')]['help']|trans|raw }}
                </div>
            </div>
        {% endif %}
    {% endblock content_help %}
    </section>

    <section id="main" class="invoice">
        {% block main %}
			{% include  'easy_admin/Devis/include_devis.html.twig' with {'entity': entity, pdf: false } %}

            {% block delete_form %}
                {{ include('@EasyAdmin/default/includes/_delete_form.html.twig', {
                    view: 'show',
                    referer: app.request.query.get('referer', ''),
                    delete_form: delete_form,
                    _translation_domain: _entity_config.translation_domain,
                    _trans_parameters: _trans_parameters,
                    _entity_config: _entity_config,
                }, with_context = false) }}
            {% endblock delete_form %}
		{% endblock %}
    </section>

{% endblock content %}

{% block body_javascript %}
    {{ parent() }}

    <script type="text/javascript">
        $(function() {
            $('.delete-line').on('click', function(e) {
                e.preventDefault();
                var id = $(this).data('id');
                var entity = $(this).data('entity');           

                $('#modal-delete').modal({ backdrop: true, keyboard: true })
                    .off('click', '#modal-delete-button')
                    .on('click', '#modal-delete-button', function () {
                        var deleteForm = $('#delete-form');
                        deleteForm.attr('action', deleteForm.attr('action').replace('id={{ entity.id }}', 'id='+id));
                        deleteForm.attr('action', deleteForm.attr('action').replace('entity=Devis', 'entity='+entity));
                        deleteForm.trigger('submit');
                    });
            });
        });
    </script>
{% endblock %}