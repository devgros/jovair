{% extends '@EasyAdmin/default/layout.html.twig' %}

{% block page_title %}Export du stock{% endblock %}

{% block content_header %}
	<h1 class="title">Export du stock</h1>
{% endblock content_header %}

{% block main %}
	<p></p>
	{% block entity_form %}
        {{ form_start(form) }}
        <div class="form-horizontal">
			<div class="box box-info">
				<div class="box-header with-border">
					<h3 class="box-title">SÃ©lectionnez les colonnes qui doivent apparaitres dans l'export du stock : </h3>
				</div>
				<div class="box-body">
					<table class="table table-striped table-bordered">
						<tr>
							<th>Colonne 1</th>
							<th>Colonne 2</th>
							<th>Colonne 3</th>
							<th>Colonne 4</th>
							<th>Colonne 5</th>
						</tr>
						<tr>
							<td>{{ form_row(form.field1) }}</td>
							<td>{{ form_row(form.field2) }}</td>
							<td>{{ form_row(form.field3) }}</td>
							<td>{{ form_row(form.field4) }}</td>
							<td>{{ form_row(form.field5) }}</td>
						</tr>
					</table>
				</div>
			</div>
		</div>
		 <div class="col-xs-12 form-actions">
            <div class="form-group">
                <div id="form-actions-row">
                	{{ form_row(form.export) }}
                </div>
            </div>
        </div>
		{{ form_end(form) }}
    {% endblock entity_form %}
{% endblock %}
